<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vplay">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".challengefragments"
            android:label="@string/title_activity_challengefragments"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".bookaground" />
        <activity android:name=".PlayerMainPage" />
        <activity android:name=".AdminMainPage" />
        <activity android:name=".TeamMainPage" />
        <activity android:name=".PlayerRegister" />
        <activity android:name=".TeamRegister" />
        <activity android:name=".SignUpAdmin" />
        <activity android:name=".SignInPage" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>