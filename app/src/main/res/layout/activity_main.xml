<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <TextView
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="Registration"
        android:gravity="center_horizontal"
        android:textSize="50dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/registerAdminRBt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@+id/skipTextView"
        android:layout_marginTop="200dp"
        android:text="Register as an Admin*"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/registerTeamRBt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@+id/skipTextView"
        android:layout_marginTop="300dp"
        android:text="Register as a Team*"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/registerPlayerRBt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@+id/skipTextView"
        android:layout_marginTop="400dp"
        android:text="Register as a Player*"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20dp" />
    
    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="500dp"
        android:text="Already have an account?"
        android:gravity="center_horizontal"
        android:textStyle="italic"
        android:textSize="20dp"
        android:id="@+id/alreadyRTV"/>

    <TextView
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="600dp"
        android:text="*Note: Click to read the resgistration procedure."
        android:gravity="center_horizontal"
        android:textStyle="normal"
        android:textSize="20dp"
        android:id="@+id/noteRTV"/>

</RelativeLayout>