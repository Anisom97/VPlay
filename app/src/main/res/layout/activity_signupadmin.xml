<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpAdmin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="Welcome to Admin Sign Up page"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:hint="Name/club name/complex name"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:id="@+id/nameEtA"/>

    <EditText
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint="Email id"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:id="@+id/emailEtA"/>

    <EditText
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:hint="Phone number"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:id="@+id/phoneEtA"/>

    <EditText
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:hint="Location/Place"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:id="@+id/locationEtA"/>


    <EditText
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:hint="Landmark"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:id="@+id/landmarkEtA"/>

    <EditText
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:hint="Details"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:id="@+id/detailsEtA"/>

    <EditText
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:hint="Password"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:id="@+id/passwordEtA"/>

    <Button
        android:id="@+id/select"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_above="@+id/skipTextView"
        android:layout_marginTop="550dp"
        android:text="Select"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/upload"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_marginLeft="320dp"
        android:layout_above="@+id/skipTextView"
        android:layout_marginTop="550dp"
        android:text="Upload"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20dp" />
    
    <EditText
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="95dp"
        android:hint="Enter file location"
        android:gravity="center_horizontal"
        android:id="@+id/photoEtA"/>
    
    <Button
        android:id="@+id/registerBtA"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@+id/skipTextView"
        android:layout_marginTop="660dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20dp" />


</RelativeLayout>